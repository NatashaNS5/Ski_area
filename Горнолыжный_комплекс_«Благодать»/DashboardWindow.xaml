<Window x:Class="Горнолыжный_комплекс__Благодать_.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Горнолыжный_комплекс__Благодать_"
        mc:Ignorable="d"
       Title="Благодать - Главное меню" Height="500" Width="800"
        Background="#FFFFFF" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Source="\Images\logo.png" Height="50" HorizontalAlignment="Left" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock x:Name="UserInfo" Foreground="#494C51"/>
            <TextBlock x:Name="SessionTimer" Margin="10,0" Foreground="#494C51"/>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="CreateOrderButton" Content="Создать заказ" Background="#498C51" Foreground="#FFFFFF" Margin="5" Click="CreateOrder_Click" Visibility="Collapsed"/>
            <Button x:Name="ReturnEquipmentButton" Content="Принять оборудование" Background="#498C51" Foreground="#FFFFFF" Margin="5" Click="ReturnEquipment_Click" Visibility="Collapsed"/>
            <Button x:Name="ViewHistoryButton" Content="История входа" Background="#498C51" Foreground="#FFFFFF" Margin="5" Click="ViewHistory_Click" Visibility="Collapsed"/>
            <Button x:Name="ManageConsumablesButton" Content="Расходные материалы" Background="#498C51" Foreground="#FFFFFF" Margin="5" Click="ManageConsumables_Click" Visibility="Collapsed"/>
        </StackPanel>
        <Button Grid.Row="2" Content="Выход" Background="#498C51" Foreground="#FFFFFF" Margin="10" Click="Logout_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>