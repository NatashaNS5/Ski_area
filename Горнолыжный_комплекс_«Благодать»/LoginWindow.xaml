<Window x:Class="Горнолыжный_комплекс__Благодать_.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Горнолыжный_комплекс__Благодать_"
        mc:Ignorable="d"
        Title="Благодать - Вход в систему" Height="450" Width="600" MinHeight="450" MinWidth="600"
        Background="#FFFFFF" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="\Images\logo.png" Height="50" HorizontalAlignment="Left" Margin="10"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="315">
            <TextBlock Text="Логин" Foreground="#494C51"/>
            <TextBox x:Name="LoginBox" Margin="0,5"/>
            <TextBlock Text="Пароль" Foreground="#494C51"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>
            <CheckBox x:Name="ShowPassword" Content="Показать пароль" Margin="0,5" Foreground="#494C51" Checked="ShowPassword_Checked" Unchecked="ShowPassword_Unchecked"/>
            <TextBlock x:Name="CaptchaLabel" Text="Капча" Visibility="Collapsed" Foreground="#494C51"/>
            <Image x:Name="CaptchaImage" Height="50" Visibility="Collapsed" Margin="0,5"/>
            <TextBox x:Name="CaptchaBox" Visibility="Collapsed" Margin="0,5"/>
            <Button x:Name="RegenerateCaptchaButton" Content="Обновить капчу" Visibility="Collapsed" Background="#76E383" Foreground="#FFFFFF" Margin="0,5" Click="RegenerateCaptcha_Click"/>
            <Button Content="Войти" Background="#498C51" Foreground="#FFFFFF" Margin="0,10" Click="Login_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock x:Name="ErrorMessage" Foreground="Red" TextAlignment="Center" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>