<Window x:Class="Горнолыжный_комплекс__Благодать_.ReturnEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Горнолыжный_комплекс__Благодать_"
        mc:Ignorable="d"
      Title="Благодать - Прием оборудования" Height="300" Width="400"
        Background="#FFFFFF" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="\Images\logo.png"  Height="50" HorizontalAlignment="Left" Margin="10"/>
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Штрих-код заказа" Foreground="#494C51"/>
            <TextBox x:Name="BarcodeBox" Margin="0,5"/>
            <Button Content="Принять" Background="#498C51" Foreground="#FFFFFF" Margin="0,10" Click="ReturnEquipment_Click"/>
            <TextBlock x:Name="StatusMessage" Foreground="#494C51" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>