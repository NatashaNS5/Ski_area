<Window x:Class="Горнолыжный_комплекс__Благодать_.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Горнолыжный_комплекс__Благодать_"
        mc:Ignorable="d"
     Title="Благодать - Создание заказа" Height="610" Width="800" MinHeight="610" MinWidth="800"
        Background="#FFFFFF" FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="\Images\logo.png" Height="50" HorizontalAlignment="Left" Margin="10"/>
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Номер заказа" Foreground="#494C51"/>
            <TextBox x:Name="OrderNumberBox" Margin="0,5" KeyDown="OrderNumberBox_KeyDown"/>
            <Button Content="Сгенерировать штрих-код" Background="#498C51" Foreground="#FFFFFF" Margin="0,5" Click="GenerateBarcode_Click"/>
            <TextBlock Text="Клиент" Foreground="#494C51" Margin="0,5,0,0"/>
            <!-- Поле поиска клиентов -->
            <TextBox x:Name="ClientSearchBox" Margin="0,5" TextChanged="ClientSearchBox_TextChanged" Text="Поиск клиента..." Foreground="Gray" GotFocus="ClientSearchBox_GotFocus" LostFocus="ClientSearchBox_LostFocus"/>
            <ComboBox x:Name="ClientComboBox" Margin="0,5" DisplayMemberPath="FullName"/>
            <Button Content="Добавить клиента" Background="#76E383" Foreground="#FFFFFF" Margin="0,5" Click="AddClient_Click"/>
            <TextBlock Text="Услуги" Foreground="#494C51" Margin="0,5,0,0"/>
            <!-- Поле поиска услуг -->
            <TextBox x:Name="ServiceSearchBox" Margin="0,5" TextChanged="ServiceSearchBox_TextChanged" Text="Поиск услуги..." Foreground="Gray" GotFocus="ServiceSearchBox_GotFocus" LostFocus="ServiceSearchBox_LostFocus"/>
            <StackPanel Orientation="Horizontal">
                <ListBox x:Name="ServicesListBox" Width="200" Height="150" Margin="0,5" SelectionMode="Multiple" DisplayMemberPath="ServiceName"/>
                <!-- Кнопка с изображением плюса для добавления услуг -->
                <Button x:Name="AddServiceButton" Width="30" Height="30" Margin="5,0,0,0" Click="AddService_Click" ToolTip="Добавить услугу" Background="Transparent" BorderThickness="0">
                    <Image Source="\Images\Добавить.png" Width="20" Height="20"/>
                </Button>
            </StackPanel>
            <TextBlock x:Name="TotalCost" Foreground="#494C51" Margin="0,5"/>
            <Button Content="Сохранить заказ" Background="#498C51" Foreground="#FFFFFF" Margin="0,10" Click="SaveOrder_Click"/>
        </StackPanel>
    </Grid>
</Window>