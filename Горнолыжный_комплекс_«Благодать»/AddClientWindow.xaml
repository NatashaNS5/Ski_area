<Window x:Class="Горнолыжный_комплекс__Благодать_.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Горнолыжный_комплекс__Благодать_"
        mc:Ignorable="d"
       Title="Благодать - Добавление клиента" Height="350" Width="400" MinHeight="350" MinWidth="400"
        Background="#FFFFFF" FontFamily="Comic Sans MS">
    <StackPanel Margin="20">
        <TextBlock Text="Код клиента" Foreground="#494C51"/>
        <TextBox x:Name="ClientCodeBox" Margin="0,5"/>
        <TextBlock Text="ФИО" Foreground="#494C51"/>
        <TextBox x:Name="FullNameBox" Margin="0,5"/>
        <TextBlock Text="Паспорт" Foreground="#494C51"/>
        <TextBox x:Name="PassportBox" Margin="0,5"/>
        <TextBlock Text="Дата рождения" Foreground="#494C51"/>
        <DatePicker x:Name="BirthDatePicker" Margin="0,5"/>
        <TextBlock Text="Адрес" Foreground="#494C51"/>
        <TextBox x:Name="AddressBox" Margin="0,5"/>
        <Button Content="Сохранить" Background="#498C51" Foreground="#FFFFFF" Margin="0,10" Click="SaveClient_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Window>